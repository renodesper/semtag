# Root configuration file
root = true

# Default settings for all files
[*]
charset = utf-8                  # Use UTF-8 encoding
end_of_line = lf                 # Unix-style line endings
indent_style = space             # Indent using spaces
indent_size = 4                  # Rust uses 4 spaces for indentation
insert_final_newline = true      # Add a newline at the end of files
trim_trailing_whitespace = true  # Remove trailing whitespace

# Special settings for Rust files
[*.rs]
max_line_length = 100            # Recommended line length for Rust
